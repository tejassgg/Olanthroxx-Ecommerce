@model Models.DTO.Budget

@using (Html.BeginForm("AddBudget", "Budget", FormMethod.Post, new { @id = "frmBudget" }))
{
    @Html.AntiForgeryToken()

    <h4>Budget</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group addBudget">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "e.g., Groceries" } })
    </div>

    <div class="form-group addBudget">
        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @type = "number", @class = "form-control", @placeholder = "e.g., Rs. 25000" } })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="addBudget" type="submit" value="Add Budget" class="btn btn-success" />
        </div>
    </div>
}
