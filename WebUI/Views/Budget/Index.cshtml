@model Models.DTO.BudgetData

@{
    ViewBag.Title = "Budget";
    Models.DTO.Expense objExp = new Models.DTO.Expense();
    Models.DTO.Budget objBud = new Models.DTO.Budget();

    int Calculate(int a, int b)
    {
        return a - b;
    }

    if (Model.lstBudgetTypes != null && Model.lstBudgetTypes.Count > 0)
    {
        ViewBag.lstBudgetTypes = Model.lstBudgetTypes;
    }
}

<div class="budget-main-container">
    <div class="budget-header">
        <h2>Welcome Back, <span class="username">@User.Identity.Name</span></h2>
    </div>

    <div class="budget-forms-row">
        <div class="budget-form-card">
            @Html.Partial("AddBudget", objBud)
        </div>
        <div class="budget-form-card">
            @Html.Partial("AddExpense", objExp)
        </div>
    </div>

    <div class="budget-section">
        <h3 class="section-title">Existing Budgets</h3>
        <div class="budget-cards-grid">
            @if (Model.lstBudget != null && Model.lstBudget.Count > 0)
            {
                var i = 1;
                foreach (var budget in Model.lstBudget)
                {
                    <div class="budget-card @(i % 2 == 0 ? "accent-red" : "accent-orange")">
                        <div class="budget-card-header">
                            <h4>@budget.Name</h4>
                            <span class="budget-amount">₹@budget.Amount</span>
                        </div>
                        <div class="budget-progress-bar">
                            <div class="progress-track">
                                <div class="progress-fill" style="width:@(((1.0m - ((decimal)budget.Balance / (decimal)budget.Amount)) * 100))%"></div>
                            </div>
                        </div>
                        <div class="budget-card-footer">
                            <span class="spent">₹@Calculate(Convert.ToInt32(budget.Amount), Convert.ToInt32(budget.Balance)) spent</span>
                            <span class="remaining">₹@budget.Balance left</span>
                        </div>
                    </div>
                    i++;
                }
            }
        </div>
    </div>

    <div class="budget-section">
        <h3 class="section-title">Recent Expenses</h3>
        @if (Model.lstExpense != null && Model.lstExpense.Count > 0)
        {
            <div class="expenses-table-wrapper">
                <table class="expenses-table">
                    <thead>
                        <tr>
                            <th>Expense</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Budget</th>
                            <th style="text-align:center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var exp in Model.lstExpense)
                        {
                            <tr>
                                <td>@exp.ExpName</td>
                                <td>₹@exp.Amount</td>
                                <td>@exp.CreatedDate.ToShortDateString()</td>
                                <td>@exp.Budget</td>
                                <td style="text-align:center"><a class="delete-expense"><i class="fas fa-trash"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<style>
.budget-main-container {
    width: 94%;
    margin: 40px auto;
    padding: 0 10px;
}

.budget-header {
    background: linear-gradient(135deg, #252525, #34495e);
    color: #fff;
    border-radius: 18px 18px 0 0;
    padding: 32px 32px 20px 32px;
    margin-bottom: 32px;
}
.budget-header h2 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
}
.budget-header .username {
    color: #00e6ff;
    font-weight: 700;
}

.budget-forms-row {
    display: flex;
    gap: 32px;
    justify-content: center;
    margin-bottom: 32px;
    flex-wrap: wrap;
}
.budget-form-card {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 4px 16px rgba(0,0,0,0.08);
    padding: 24px 18px;
    min-width: 320px;
    max-width: 420px;
    width: 100%;
}

.budget-section {
    margin-bottom: 40px;
}
.section-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 24px;
}

.budget-cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 24px;
}
.budget-card {
    background: #fff;
    border-radius: 14px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    padding: 22px 20px 18px 20px;
    border-left: 6px solid #f39c12;
    display: flex;
    flex-direction: column;
    gap: 12px;
    min-width: 0;
}
.budget-card.accent-red { border-left-color: #e74c3c; }
.budget-card.accent-orange { border-left-color: #f39c12; }
.budget-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
}
.budget-card-header h4 {
    font-size: 1.2rem;
    font-weight: 700;
    margin: 0;
}
.budget-amount {
    font-size: 1.1rem;
    font-weight: 600;
    color: #3498db;
}
.budget-progress-bar {
    margin: 10px 0 6px 0;
}
.progress-track {
    background: #e9ecef;
    border-radius: 8px;
    height: 12px;
    width: 100%;
    overflow: hidden;
}
.progress-fill {
    background: linear-gradient(90deg, #3498db, #2980b9);
    height: 100%;
    border-radius: 8px 0 0 8px;
    transition: width 0.4s cubic-bezier(.4,2,.6,1);
}
.budget-card-footer {
    display: flex;
    justify-content: space-between;
    font-size: 0.98rem;
    color: #7f8c8d;
}
.spent {
    color: #e74c3c;
    font-weight: 600;
}
.remaining {
    color: #27ae60;
    font-weight: 600;
}

.expenses-table-wrapper {
    background: #fff;
    border-radius: 14px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    padding: 18px 12px;
    width: 100%;
    overflow-x: auto;
}
.expenses-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
}
.expenses-table th {
    background: linear-gradient(135deg, #252525, #34495e);
    color: #fff;
    font-weight: 600;
    padding: 12px 8px;
    font-size: 15px;
    border: none;
    white-space: nowrap;
}
.expenses-table td {
    padding: 12px 8px;
    font-size: 15px;
    color: #2c3e50;
    border-bottom: 1px solid #e9ecef;
    background: #fff;
    vertical-align: middle;
    white-space: nowrap;
}
.expenses-table tr:last-child td {
    border-bottom: none;
}
.delete-expense i {
    color: #e74c3c;
    font-size: 1.1rem;
    cursor: pointer;
    transition: color 0.2s;
}
.delete-expense i:hover {
    color: #c0392b;
}

@@media (max-width: 900px) {
    .budget-forms-row {
        flex-direction: column;
        gap: 20px;
        align-items: center;
    }
    .budget-cards-grid {
        grid-template-columns: 1fr;
    }
}
@@media (max-width: 600px) {
    .budget-main-container {
        width: 98%;
        margin: 10px auto;
        padding: 0 2px;
    }
    .budget-header {
        padding: 16px 8px 10px 8px;
        font-size: 1.1rem;
    }
    .budget-form-card {
        min-width: 0;
        max-width: 100%;
        padding: 12px 6px;
    }
    .section-title {
        font-size: 1.1rem;
    }
}
</style>
