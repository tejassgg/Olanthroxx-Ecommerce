@model Models.DTO.UserLoginObject

@{
    ViewBag.Title = "Login";
}

<center style="margin-top: 5%;">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "signin-form" }))
    {
        <div class="signin-form-body-left">
            <h1 style=" text-align: left; ">Welcome,</h1>
            <h3 style="margin-top: 0px; text-align: revert; margin-left: 90px;">To Olanthroxx</h3>

            <p style="margin-top: 20%; padding: inherit; ">
                Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard 
                dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.
            </p>
        </div>
        <div class="signin-form-body-right">

            <h2 style="margin: 10px 0px;">User Login</h2>
            <hr style="border-top: 1px solid black; margin: 0px 8px 30px 8px;" />
            @Html.ValidationSummary(true, "", new { @class = "text-danger", @id = "txtValidationSummary" })

            <div class="frmGrp">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2 text-left" })
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="frmGrp">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 text-left" })
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            </div>
            <div class="frmGrp">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
            <div>
                @Html.ActionLink("New User? Register Here", "Register")
            </div>
            <div id="forgotPassword" class="displayNone">
                @Html.ActionLink("Forgot Password?", "ForgotPassword")
            </div>
        </div>
    }
</center>


<script>

    $(window).on('load', function () {
        if ($("#txtValidationSummary ul li").text() != null && $("#txtValidationSummary ul li").text() != "") {
            $("#forgotPassword").removeAttr("class");
        }
    });
</script>

