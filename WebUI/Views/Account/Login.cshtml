        <i class="fas fa-user"></i>
        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form_Control", @placeholder = "Username" } })
    </div>
    
    <div class="form_Input">
        <i class="fas fa-lock"></i>
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form_Control", @type = "password", @placeholder = "Password" } })
