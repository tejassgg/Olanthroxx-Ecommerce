    font-weight: 600;
    border-bottom: 1px solid #e9ecef;
}
.order-summary-section {
    padding: 32px;
    background: #f8f9fa;
    border-bottom: 1px solid #e9ecef;
}
.order-summary-row {
    display: flex;
    gap: 32px;
    margin-bottom: 12px;
}
.order-summary-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
}
.order-summary-label {
    font-size: 13px;
    color: #7f8c8d;
    font-weight: 600;
}
.order-summary-value {
    font-size: 16px;
    color: #2c3e50;
    font-weight: 700;
}
.order-section-title {
