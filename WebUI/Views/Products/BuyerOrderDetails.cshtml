    background: linear-gradient(135deg, #2980b9, #1f5f8b);
    transform: translateY(-2px);
}
.review-btn.disabled {
    background: #95a5a6;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
}
.reviewed-label {
    color: #27ae60;
    font-weight: 700;
    font-size: 14px;
}
.print-btn {
    background: linear-gradient(135deg, #3498db, #2980b9);
    color: #fff;
    border: none;
    padding: 12px 24px;
    border-radius: 8px;
    font-size: 15px;
    font-weight: 700;
    margin: 24px 32px 0 32px;
    transition: all 0.2s;
    display: flex;
    align-items: center;
    gap: 10px;
    box-shadow: 0 2px 8px rgba(52, 152, 219, 0.15);
}
.print-btn:hover {
    background: linear-gradient(135deg, #2980b9, #1f5f8b);
    transform: translateY(-2px);
}
.order-details-footer {
    padding: 24px 32px 0 32px;
    display: flex;
    justify-content: flex-end;
}
.back-btn {
    background: #f8f9fa;
    color: #3498db;
    border: none;
    padding: 10px 18px;
    border-radius: 8px;
    font-size: 15px;
    font-weight: 600;
    transition: all 0.2s;
    box-shadow: 0 2px 8px rgba(52, 152, 219, 0.12);
    text-decoration: none;
}
.back-btn:hover {
    background: #3498db;
    color: #fff;
}
@@media (max-width: 700px) {
    .order-details-header {
        padding: 18px 18px 12px 18px;
    }
    .order-summary-section, .order-items-table-wrapper, .order-details-footer {
        padding: 12px;
    }
    .order-section-title {
        margin: 24px 0 12px 12px;
        font-size: 17px;
    }
    .print-btn {
        margin: 18px 12px 0 12px;
    }
}
@@media (max-width: 480px) {
    .order-details-header h2 {
        font-size: 1.2rem;
    }
    .order-details-card {
        border-radius: 10px;
    }
    .order-summary-row {
        flex-direction: column;
        gap: 10px;
    }
}
</style>