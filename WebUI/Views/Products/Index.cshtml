    transition: all 0.2s;
    border: none;
    cursor: pointer;
    font-size: 14px;
}
.action-btn.edit-btn {
    background: #3498db;
    color: #fff;
}
.action-btn.edit-btn:hover {
    background: #2980b9;
    transform: translateY(-1px);
}
.action-btn.view-btn {
    background: #27ae60;
    color: #fff;
}
.action-btn.view-btn:hover {
    background: #229954;
    transform: translateY(-1px);
}
